{
  "name": "building-management-system",
  "version": "1.0.0",
  "description": "Building Management Software with Ticket Workflow System",
  "private": true,
  "type": "module",
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "firebase": "^10.0.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.263.0",
    "next": "^15.4.6",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.0",
    "react-hook-form": "^7.45.0",
    "react-router-dom": "^6.8.0",
    "recharts": "^3.1.2",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/cypress": "^0.1.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "cypress": "^14.5.0",
    "cypress-multi-reporters": "^2.0.5",
    "eslint": "^9.0.0",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.3",
    "vite": "^4.4.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "cypress run",
    "test:open": "cypress open",
    "test:baseline": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts'",
    "test:regression": "cypress run --spec 'cypress/e2e/regression-pack.cy.ts'",
    "test:quick": "cypress run --spec 'cypress/e2e/regression-pack.cy.ts' --grep 'Critical Path'",
    "test:auth": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Authentication'",
    "test:navigation": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Navigation'",
    "test:dashboard": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Dashboard'",
    "test:tickets": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Ticket Management'",
    "test:budget": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Budget Management'",
    "test:invoices": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Invoice Management'",
    "test:service-charges": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Service Charge Management'",
    "test:people": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'People Management'",
    "test:assets": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Asset Management'",
    "test:events": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Event Scheduling'",
    "test:performance": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Data Integrity & Performance'",
    "test:errors": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Error Handling'",
    "test:accessibility": "cypress run --spec 'cypress/e2e/baseline-tests.cy.ts' --grep 'Accessibility'",
    "test:tdd": "npm run test:regression && npm run test:baseline",
    "test:ci": "start-server-and-test dev http://localhost:3005 test",
    "test:coverage": "cypress run --env coverage=true",
    "test:parallel": "cypress run --parallel --record",
    "test:headless": "cypress run --headless",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "test:mobile": "cypress run --config viewportWidth=375,viewportHeight=667",
    "test:tablet": "cypress run --config viewportWidth=768,viewportHeight=1024",
    "test:desktop": "cypress run --config viewportWidth=1920,viewportHeight=1080",
    "test:report": "cypress run --reporter mochawesome",
    "test:junit": "cypress run --reporter mocha-junit-reporter",
    "test:multi-report": "cypress run --reporter cypress-multi-reporters",
    "test:watch": "cypress run --watch",
    "test:debug": "cypress run --config video=false",
    "test:clean": "rm -rf cypress/screenshots cypress/videos cypress/reports",
    "test:setup": "npm run test:clean && npm install",
    "test:validate": "npm run test:regression && npm run lint && npm run build",
    "test:pre-commit": "npm run test:regression",
    "test:post-commit": "npm run test:baseline",
    "test:nightly": "npm run test:baseline -- --record",
    "test:weekly": "npm run test:baseline -- --record --parallel",
    "test:monthly": "npm run test:baseline -- --record --parallel --group 'Monthly Full Suite'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
